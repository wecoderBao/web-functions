<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<context:component-scan base-package="com.netease.zookeeper.web" />
    <context:component-scan base-package="com.netease.zookeeper.app" />
	<mvc:annotation-driven />
    <context:annotation-config/>
	  <bean id="jspViewResolver"  
    		class="org.springframework.web.servlet.view.InternalResourceViewResolver">  
	        <property name="viewClass"  
	            value="org.springframework.web.servlet.view.JstlView" />  
	        <property name="prefix" value="/WEB-INF/jsp/" />  
	        <property name="suffix" value=".jsp" />  
  		</bean>
  	<mvc:interceptors>
  			<!-- 所有请求 -->
		   <bean class="com.bao.moduleA.web.interceptor.ContextInterceptor"/>
		   <mvc:interceptor>
		   		<!-- 只过滤后台用户登录 -->
                <mvc:mapping path="/admin/**"/>
			    <bean class="com.bao.moduleA.web.interceptor.AdminLoginInterceptor"/>
		   </mvc:interceptor>
	</mvc:interceptors>  
</beans>
